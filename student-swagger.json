{
  "swagger": "2.0",
  "info": {
    "title": "Mindx API",
    "description": "Mindx API",
    "version": "1.0.0"
  },
  "basePath": "/student",
  "schemes": ["https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/student-list": {
      "get": {
        "tags": ["student"],
        "description": "Get a list of students",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean"
                },
                "message": {
                  "type": "string"
                },
                "student_list": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Student"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/add-student": {
      "post": {
        "tags": ["student"],
        "description": "Add a new student",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Student object that needs to be added",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Student"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean"
                },
                "message": {
                  "type": "string"
                },
                "added_students": {
                  "type": "object",
                  "$ref": "#/definitions/Student"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/remove-student/{student_id}": {
      "delete": {
        "tags": ["student"],
        "description": "Remove a student",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "student_id",
            "in": "path",
            "description": "ID of student to remove",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean"
                },
                "message": {
                  "type": "string"
                },
                "removed_student": {
                  "type": "object",
                  "$ref": "#/definitions/Student"
                }
              }
            }
          },
          "404": {
            "description": "Student not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/update-student/{student_id}": {
      "put": {
        "tags": ["student"],
        "description": "Update an existing student",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "student_id",
            "in": "path",
            "description": "ID of student to update",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Student object that needs to be updated",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean"
                },
                "message": {
                  "type": "string"
                },
                "updated_students": {
                  "type": "object",
                  "$ref": "#/definitions/Student"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Student"
            }
          },
          "404": {
            "description": "Student not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/find": {
      "get": {
        "tags": ["student"],
        "description": "Get a list of students with a name matching the provided query",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Query string to match against student names",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean"
                },
                "message": {
                  "type": "string"
                },
                "students": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Student"
                  }
                }
              }
            }
          },
          "404": {
            "description": "No students found with provided name"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "Student": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "gender": {
          "type": "string"
        },
        "birthday": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        }
      }
    }
  }
}
