{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",       
    "allowJs": true,      
    "outDir": "dist",   
    "strict": true,    
    "moduleResolution": "node",                                                  
    "esModuleInterop": true,                            
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
}
